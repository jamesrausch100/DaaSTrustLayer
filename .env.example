# ================================================
# Market2Agent — Environment Configuration
# Copy to .env and fill in your values
# ================================================

# === Core ===
M2A_ENV=production
M2A_HOST=0.0.0.0
M2A_PORT=8000

# === Neo4j (set this — used by docker-compose) ===
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# === Redis ===
REDIS_URL=redis://redis:6379/0

# === Security ===
SECRET_KEY=CHANGE_ME_RUN_python3_-c_"import secrets; print(secrets.token_hex(32))"
M2A_ADMIN_KEY=CHANGE_ME_ADMIN_KEY

# === Application URLs ===
APP_URL=https://market2agent.ai
API_URL=https://market2agent.ai
COOKIE_DOMAIN=.market2agent.ai

# === Google OAuth (for user login) ===
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# === Stripe (for subscriptions) ===
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=
